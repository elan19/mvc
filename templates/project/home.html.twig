{% extends "project/base.html.twig" %}

{% block title %}Home{% endblock %}

{% block body %}
    <h1>PROOOOJECT HOME</h1>

    <h2>Blackjack</h2>

    {% if game == false %}

    <form method="post" action="{{ path('blackjack_setup') }}">
        <label for="numPlayers">Number of Players:</label>
        <input type="number" id="numPlayers" name="numPlayers" min="1" max="3" required>
        <button type="submit">Start Game</button>
    </form>

    {% else %}

    <p>Game is already in progress, go back to the game: <a href="{{ path('blackjack_game') }}">Here</a></p>

    {% endif %}
{% endblock %}
